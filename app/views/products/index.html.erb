<% provide :title, t(".clothings") %>
<div id="product-Name">
  <div class="container-fluid">
    <div class="row content">
      <div class="col-sm-3 category">
        <h4>Mango Man</h4>
        <div class="input-group">
          <!-- <input type="text" class="form-control" placeholder="Search Blog..">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span> -->
          <%= form_tag products_path, method: :get do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search by product name...", class: "form-control" %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
        <% @category.each do |category| %>
          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to category.name, category_path(category) %></li>
          </ul><br>
        <% end %>
      </div>

      <div class="col-sm-9 product">
        <div class="product-List">
          <% if @products.present? %>
            <% @products.each do |product| %>
              <fieldset class="fieldset">
                <tbody>
                  <div class="info-Product">
                    <ul>
                      <div id="img-Image">
                        <%= link_to image_tag(product.image_link), product_path(product) %>
                      </div>
                    </ul>

                    <ul id="list-Description">
                      <li id="li-Product">
                        <%= link_to product.name, product_path(product) %>
                      </li>
                    </ul>

                    <ul id="price-Product">
                      <div>
                        <%= product.price %>.000
                      </div>
                    </ul>

                    <ul id="ul-Products">
                      <%= link_to t(".show"), product %>
                      <%= link_to t(".edit"), edit_product_path(product) %>
                      <%= link_to t(".destroy"), product,
                        data: {confirm: t(".are_you_sure?")}, method: :delete %>
                    </ul>
                  </div>
                </tbody>
              </fieldset>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
